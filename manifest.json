{
  "manifest_version": 2,
  "homepage_url": "http://www.vietnamworks.com",
  "name": "VietnamWorks Smart Job Alert Notification",
  "description": "In order to simplify the process of finding dream job, this extension will look for your dream job.",
  "version": "1.0",

  "icons" : {
    "16": "/assets/icon.png",
    "48": "/assets/vnw_logo_1024.png",
    "128": "/assets/vnw_logo_1024.png"
  },

  "web_accessible_resources" : [
    "/assets/vnw_logo_1024.png"
  ],

  "browser_action": {
    "default_icon": "/assets/icon.png",
    "default_popup": "popup.html"
  },

  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },

  "background": {
    "scripts": [
      "background.js",
      "api.js"
    ],
    "persistent": false
  },

  "permissions": [
    "activeTab",
    "tabs",
    "alarms",
    "http://*/*",
    "https://*/*",
    "notifications"
  ]
}